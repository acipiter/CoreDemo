
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_WebLayout.cshtml";
}

<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Yazar Kayıt Sayfası</h3>
        <div class="inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                <form method="post" id="UserRegister">
                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom01">Adınız soyadınız</label>

                            <input type="text" class="form-control" id="validationDefault01" placeholder="" name="WriterName" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom02">Mail adresi</label>
                            <input type="email" class="form-control" id="validationDefault02" placeholder="" name="WriterMail" required>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="PasswordSet mb-2">Şifre</label>
                            <input type="password" class="form-control" id="PasswordSet" placeholder="" name="WriterPassword" required>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="PasswordConfirm mb-2">Şifre</label>
                            <input type="password" class="form-control" id="PasswordConfirm" placeholder="" name="WriterPasswordConfirm" required>
                        </div>

                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="WriterImage mb-2">Görsel dosya yolu</label>
                            <input type="text" class="form-control" id="WriterImage" placeholder="" name="WriterImage">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="WriterCity mb-2">Şehir</label>
                            <input type="text" class="form-control" id="WriterCity" placeholder="" name="WriterCity">
                        </div>
                    </div>
                    <button type="submit" id="register" class="btn btn-primary submit mb-4">Kayıt ol</button>
                    <p>
                        <a href="#">Tüm şartları okudum, kabul ediyorum.</a>
                    </p>
                </form>


            </div>
        </div>
    </div>
</section>

@section CustomScripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script>
        $(document).ready(function() {
            
            $("#UserRegister").validate({
                rules: {
                    WriterPassword: {
                        required: true,
                    },
                    WriterPasswordConfirm: {
                        required: true,
                        equalTo: "#passwordSet"
                    }
                },
                messages: {
                    WriterPassword: {
                        required: "Bu alanın doldurulması zorunludur.",
                    },
                    WriterPasswordConfirm: {
                        required: "Bu alanın doldurulması zorunludur.",
                        equalTo: "Lütfen şifrelerin birbiriyle aynı olduğundan emin olun."
                    }
                }
            });
            
        })
    </script>
}

